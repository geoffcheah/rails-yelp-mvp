<div class="container">
  <h1>Reviewing <%= @restaurant.name %>...</h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>

      <%= f.input :rating, collection: 1..5 %>

      <%= f.button :button %>
  <% end %>
  <p><%= link_to "Back to #{@restaurant.name}",  restaurant_path(@restaurant) %></p>

</div>
